{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "allowJs": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types",
      "global.d.ts"
    ],
    "paths": {
      "@/services/*": ["./src/services/*"],
      "@/api": ["./src/services/api"],
      "@/tip": ["./src/utils/tip"],
      "@/util": ["./src/utils/util"],
      "@/utils/*": ["./src/utils/*"],
      "@/pages": ["./src/pages"],
      "@/route": ["./src/utils/route"],
      "@/messages": ["./src/utils/messages"],
      "@/components/*": ["./src/components/*"],
      "@/store/*": ["./src/store/*"],
      "@/data/*": ["./src/data/*"],
      "@/i18n": ["./src/i18n"],
      "@/interfaces/*": ["./src/interfaces/*"],
      "@styles/*": ["./src/styles/*"],
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compileOnSave": false
}
